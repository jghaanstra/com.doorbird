		"de": "DoorBird"
	},
	"tags": {
		"en": [ "smart doorbell", "IP camera", "DoorBird" ],
		"nl": [ "slimme deurbel", "IP camera", "DoorBird" ],
		"de": [ "intelligente türklingel", "IP camera", "DoorBird" ]
